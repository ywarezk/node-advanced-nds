	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Program",
			"program": "${workspaceFolder}/db.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node",
			"envFile": "${workspaceFolder}/.env"
		},
		
		{
			"args": [
				"-u",
				"bdd",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/**/*.spec.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"name": "Mocha Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"request": "launch",
			"envFile": "${workspaceFolder}/.env",			
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node"
		}
	]
}